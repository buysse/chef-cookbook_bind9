// organization
//include "/etc/bind/zones.rfc1918";

<% @zonefiles.each do |conf| -%>
zone "<%= conf["domain"] %>" IN {
  type <%= conf["type"] %>;
  file "<%= node[:bind9][:config_path] %>/<%= conf["domain"] %><%= conf["type"] == "slave" ? ".slave" : "" %>";
<% if conf["type"] == "master" -%>
  allow-transfer {
  <% conf["allow_transfer"].each do |ip| -%>
    <%= ip %>;
  <% end -%>
  };
<% elsif conf["type"] == "slave" -%>
  masters {
  <% conf["masters"].each do |ip| -%>
    <%= ip %>;
  <% end -%>
  };
<% end -%>
};

<% end %>
